<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.www.activity.SettingActivity">

    <TextView
        android:id="@+id/textView5"
        style="@style/titleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置中心" />

    <com.example.www.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.www.mobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        mobilesafe:destitle="自动更新设置" />

    <com.example.www.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.www.mobilesafe"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="归属地显示已关闭"
        mobilesafe:deson="归属地显示已开启"
        mobilesafe:destitle="电话归属地的显示设置" />

    <com.example.www.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.www.view.SettingClickView
        android:id="@+id/scv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.www.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.www.mobilesafe"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="关闭电话号拦截"
        mobilesafe:deson="开启电话号拦截"
        mobilesafe:destitle="黑名单电话拦截设置" />

</LinearLayout>
